{

    "functions": {
      "api/*.php": {
        "runtime": "vercel-php@0.5.2"
      }
    },
    "builds": [
        { "src": "/api/*.php", "use": "vercel-php@0.5.2" },
        { "src": "/assets/**", "use": "@vercel/static" }
    ],
    "routes": [
        {
            "src": "/(css|js)/(.*)",
            "dest": "/api/assets.php?file=public/$1/$2"
        },
        {
            "src": "/(.*)",
            "dest": "/api/*.php"
        }
    ]
  }